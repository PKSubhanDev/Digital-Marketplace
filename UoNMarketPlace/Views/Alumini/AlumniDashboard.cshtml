    }

    .logo-mod {
        color: white;
        font-family: "Space Grotesk", sans-serif;
    }

    .Navbar .Name a {
        font-size: 16px;
        font-family: "Space Grotesk", sans-serif;
        font-weight: 500;
        text-transform: uppercase;
        text-decoration: none;
        margin-right: 30px;
    }

    .dropdown-toggle {
        color: white;
        font-size: 16px;
