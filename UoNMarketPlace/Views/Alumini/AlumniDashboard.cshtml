@model IEnumerable<UoNMarketPlace.Model.AlumniPost>
@{
    ViewData["Title"] = "Alumni Dashboard";
}

<div class="Navbar">
    <div class="navbar-brand">
        <span class="logo-glam">UON</span><span class="logo-mod">Marketplace</span>
    </div>

    <div class="Name" style="height: 24px; justify-content: space-between; align-items: center; display: flex">
        <li style="list-style: none; margin-right: 125px;">
            <a asp-action="Forum" asp-controller="Alumini" class="Forum" style="text-decoration:none; color: white; font-size: 16px; font-family: Space Grotesk; font-weight: 500; text-transform: uppercase;">
                Forum
            </a>
        </li>

        <li style="list-style: none; margin-right: 125px;">
            <a asp-action="AlumniDashboard" asp-controller="Alumini" class="Dashboard" style="text-decoration:none; color: white; font-size: 16px; font-family: Space Grotesk; font-weight: 500; text-transform: uppercase;">
                Dashboard
            </a>
        </li>

        <li style="list-style: none; margin-left: 20px;">
            <form method="post" asp-controller="Login" asp-action="Logout" style="display: inline;">
                <button type="submit" style="background: none; border: none; color: white; font-size: 16px; text-transform: uppercase; cursor: pointer;">
                    Logout
                </button>
            </form>
        </li>
    </div>
</div>

<!-- Main Content Area -->
<div class="content-container" style="padding: 20px;">

    <!-- Header Section -->
    <h2 class="header-title">Explore Internship Opportunities</h2>

    <!-- Internship Posting Form -->
    <div class="post-form" style="background-color: #f8f9fa; padding: 20px; border-radius: 8px; margin-bottom: 20px;">
        <h3>Post an Internship Opportunity</h3>
        <div class="container">
            <a href="@Url.Action("CreatePost", "Alumini")" class="btn btn-primary mb-3">Create New Post</a>
        </div>
    </div>

    <!-- Internship Listings -->
    <div class="internship-listing" style="background-color: #ffffff; padding: 20px; border-radius: 8px;">
        @if (Model != null)
        {
            foreach (var post in Model)
            {
                <div class="internship-card" style="border: 1px solid #ddd; padding: 15px; border-radius: 8px; margin-bottom: 15px;">
                    <h4>@post.Title</h4>
                    <p>@post.Content</p>
                    <a asp-action="Forum" asp-controller="Alumini">
                        <button class="btn btn-success">View Details</button>
                    </a>
                </div>
            }
        }
        else
        {
            <p>No internships available currently. Be the first to post!</p>
        }
    </div>
</div>

